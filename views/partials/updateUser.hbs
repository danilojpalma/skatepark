    <h1>Skate Park</h1>

    <div class="py-4">
      <h2>Datos del perfil</h2>
      <hr class="w-50 m-auto mt-3 mb-3" />

      <form method="POST" id="user-form" enctype="multipart/form-data"   >
        {{#if user}}
        <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 mb-4 col-sm-6">
            <label>Email</label>
            <input
              class="form-control m-auto"
              type="email"
              value="{{user.email}}"
              name="email"
              required
              disabled
            />
            <input type="hidden" name="email" value="{{user.email}}">
            <input type="hidden" name="_method" value="DELETE">
          </div>
          <div class="form-group col-12  col-sm-6">
            <label>Nombre</label>
            <input 
              class="form-control m-auto" 
              value="{{user.nombre}}"
              type="text"
              name="nombre"
              required />
          </div>
          <div class="form-group col-12 mb-4 col-sm-6">
            <label>Password</label>
            <input
              type="password"
              class="form-control m-auto"
              value=""
              name="password"
              required
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Repita la password</label>
            <input
              type="password"
              class="form-control m-auto"
              value=""
              name="verify_password"
              required
            />
          </div>
          <div class="form-group col-12 mb-4 col-sm-6">
            <label>AÃ±os de experiencia</label>
            <input 
            class="form-control m-auto" 
            value="{{user.anos_experiencia}}" 
            type="number"
            name="anos_experiencia"
            required/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Especialidad</label>
            <input 
            class="form-control m-auto" 
            value="{{user.especialidad}}"
            type="text"
            name="especialidad"
            required
             />
          </div>
        </div>
        <div class="mb-1">
          <button class="btn btn-primary mb-2" type="submit" >Actualizar</button>
        </div>
        <div>
          <button class="btn btn-danger" type="submit" id="delete-account-btn">Eliminar cuenta</button>
        </div>
        {{/if}}
      </form>
    </div>

    <script src="./assets/js/deleteScript.js" ></script>
